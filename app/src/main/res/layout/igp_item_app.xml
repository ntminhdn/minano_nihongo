<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/igp_item_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/igp_icon"
        android:layout_height="@dimen/igp_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/igp_item_padding">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/igp_item_title_size"
            android:text="AAAAAAAAA"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/igp_item_normal_size"
            android:text="aaaaaaaa"/>
    </LinearLayout>
</LinearLayout>